{
	"$schema": "https://modelcontextprotocol.io/schema/servers.json",
	"comment": "Claude Code (CLI) MCP Server Configuration",
	"mcpServers": {
		"pie-players-browser": {
			"command": "npx",
			"args": ["-y", "@playwright/mcp"],
			"env": {
				"PLAYWRIGHT_CONFIG": "./apps/example/playwright.config.ts",
				"BASE_URL": "http://127.0.0.1:5200"
			}
		},
		"pie-players-npm": {
			"command": "bun",
			"args": ["run", "@modelcontextprotocol/server-npm"],
			"env": {
				"NPM_REGISTRY": "https://registry.npmjs.org",
				"WORKSPACE_ROOT": "."
			}
		},
		"pie-players-fs": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-filesystem", "."]
		},
		"pie-players-memory": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-memory"],
			"env": {
				"MEMORY_DB_PATH": ".mcp/memory.db"
			}
		},
		"pie-players-imagen": {
			"command": "bun",
			"args": ["run", "packages/mcp-imagen/src/index.ts"],
			"env": {
				"OUTPUT_DIR": "./apps/docs/static/images/generated"
			}
		}
	}
}
