{
	"$schema": "https://modelcontextprotocol.io/schema/servers.json",
	"mcpServers": {
		"npm-registry": {
			"command": "bun",
			"args": ["run", "@modelcontextprotocol/server-npm"],
			"env": {
				"NPM_REGISTRY": "https://registry.npmjs.org",
				"WORKSPACE_ROOT": "."
			}
		},
		"filesystem": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"."
			],
			"env": {
				"ALLOWED_DIRECTORIES": "."
			}
		},
		"memory": {
			"command": "npx",
			"args": ["-y", "@modelcontextprotocol/server-memory"],
			"env": {
				"MEMORY_STORAGE": "sqlite",
				"MEMORY_DB_PATH": ".mcp/memory.db",
				"MEMORY_EMBEDDING_MODEL": "text-embedding-3-small"
			}
		},
		"imagen": {
			"command": "bun",
			"args": ["run", ".mcp-imagen/src/index.ts"],
			"env": {
				"OUTPUT_DIR": "./apps/docs/static/images/generated"
			}
		}
	}
}
