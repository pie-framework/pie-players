{
	"name": "@pie-players/pie-players-example",
	"version": "0.1.0",
	"description": "PIE Players Example & Demo Application",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"dev:with-deps": "turbo dev --filter=@pie-players/pie-players-example...",
		"dev:root": "bun run --cwd ../.. dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"typecheck": "tsc --noEmit",
		"test": "bun run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:evals": "playwright test --config playwright.evals.config.ts",
		"test:evals:ui": "playwright test --config playwright.evals.config.ts --ui",
		"test:evals:headed": "playwright test --config playwright.evals.config.ts --headed",
		"test:a11y": "playwright test tests/e2e/accessibility.spec.ts",
		"test:a11y:ui": "playwright test tests/e2e/accessibility.spec.ts --ui"
	},
	"dependencies": {
		"@pie-players/pie-author": "workspace:*",
		"@pie-players/pie-inline-player": "workspace:*",
		"@pie-players/pie-fixed-player": "workspace:*",
		"@pie-players/pie-iife-player": "workspace:*",
		"@pie-players/pie-esm-player": "workspace:*",
		"@pie-players/pie-section-player": "workspace:*",
		"@pie-players/pie-players-shared": "workspace:*",
		"@pie-players/pie-assessment-toolkit": "workspace:*",
		"@pie-players/pie-assessment-player": "workspace:*",
		"@pie-players/tts-server-core": "workspace:*",
		"@pie-players/tts-server-polly": "workspace:*",
		"@pie-players/tts-client-server": "workspace:*",
		"@tiptap/core": "^3.18.0",
		"@tiptap/extension-code-block": "^3.18.0",
		"@tiptap/extension-code-block-lowlight": "^3.18.0",
		"@tiptap/extension-document": "^3.18.0",
		"@tiptap/extension-history": "^3.18.0",
		"@tiptap/extension-text": "^3.18.0",
		"@tiptap/starter-kit": "^3.18.0",
		"@tiptap/pm": "^3.18.0",
		"highlight.js": "^11.11.1",
		"lowlight": "^3.3.0"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.0",
		"@pie-players/local-esm-cdn": "workspace:*",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.0.0-beta.7",
		"@types/node": "^25.0.3",
		"@types/js-yaml": "^4.0.9",
		"axe-core": "^4.11.1",
		"daisyui": "^5.5.14",
		"js-yaml": "^4.1.0",
		"svelte": "^5.49.1",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^4.0.0-beta.7",
		"typescript": "^5.9.3",
		"vite": "^7.3.1"
	},
	"license": "MIT"
}
