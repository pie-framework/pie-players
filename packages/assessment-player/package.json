{
	"name": "@pie-players/pie-assessment-player",
	"version": "0.1.9",
	"type": "module",
	"description": "Assessment player web component that orchestrates PIE item players and assessment-toolkit services",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/assessment-player"
	},
	"publishConfig": {
		"access": "public"
	},
	"unpkg": "./dist/pie-assessment-player.js",
	"jsdelivr": "./dist/pie-assessment-player.js",
	"main": "./dist/pie-assessment-player.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/pie-assessment-player.js"
		},
		"./player": {
			"types": "./dist/player/index.d.ts",
			"import": "./dist/player/index.js"
		},
		"./Layout.svelte": {
			"svelte": "./src/player/AssessmentLayout.svelte",
			"import": "./src/player/AssessmentLayout.svelte"
		},
		"./reference-layout": {
			"types": "./dist/reference-layout/index.d.ts",
			"import": "./dist/reference-layout/index.js"
		},
		"./reference-layout/ReferenceLayout.svelte": {
			"svelte": "./src/reference-layout/ReferenceLayout.svelte",
			"import": "./src/reference-layout/ReferenceLayout.svelte"
		},
		"./components/AssessmentItemList.svelte": {
			"svelte": "./src/components/AssessmentItemList.svelte",
			"import": "./src/components/AssessmentItemList.svelte"
		},
		"./components/AssessmentSectionList.svelte": {
			"svelte": "./src/components/AssessmentSectionList.svelte",
			"import": "./src/components/AssessmentSectionList.svelte"
		}
	},
	"files": [
		"dist",
		"src/components",
		"src/player",
		"src/reference-layout"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"typecheck": "tsc --noEmit",
		"check": "svelte-check --tsconfig ./tsconfig.json --compiler-warnings options_missing_custom_element:ignore",
		"lint": "biome check ."
	},
	"peerDependencies": {
		"svelte": "^5.51.0"
	},
	"dependencies": {
		"@pie-players/pie-assessment-toolkit": "workspace:*",
		"@pie-players/pie-iife-player": "workspace:*",
		"@pie-players/pie-players-shared": "workspace:*",
		"@pie-players/pie-tool-annotation-toolbar": "workspace:*",
		"@pie-players/pie-tool-color-scheme": "workspace:*",
		"@pie-players/pie-tool-text-to-speech": "workspace:*",
		"@pie-players/pie-tool-toolbar": "workspace:*",
		"daisyui": "^5.5.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"@types/node": "^22.12.7",
		"svelte": "^5.51.3",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.0",
		"vite": "^7.0.8",
		"vite-plugin-dts": "^4.5.3"
	},
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/assessment-player#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": true
}
