{
	"name": "@pie-players/pie-assessment-toolkit",
	"version": "0.2.9",
	"type": "module",
	"description": "PIE assessment toolkit: composable services + reference implementation for assessment players and tool coordination",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/assessment-toolkit"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"unpkg": "./dist/index.js",
	"jsdelivr": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./tools/client": {
			"types": "./dist/tools/client.d.ts",
			"import": "./dist/tools/client.js"
		},
		"./components/item-toolbar-element": {
			"types": "./dist/components/item-toolbar-element.d.ts",
			"import": "./dist/components/item-toolbar-element.js"
		},
		"./components/pie-assessment-toolkit-element": {
			"types": "./dist/components/pie-assessment-toolkit-element.d.ts",
			"import": "./dist/components/pie-assessment-toolkit-element.js"
		},
		"./components/section-toolbar-element": {
			"types": "./dist/components/section-toolbar-element.d.ts",
			"import": "./dist/components/section-toolbar-element.js"
		},
		"./services/pnp-standard-features": {
			"types": "./dist/services/pnp-standard-features.d.ts",
			"import": "./dist/services/pnp-standard-features.js"
		},
		"./services/pnp-provenance": {
			"types": "./dist/services/pnp-provenance.d.ts",
			"import": "./dist/services/pnp-provenance.js"
		},
		"./services/I18nService": {
			"types": "./dist/services/I18nService.d.ts",
			"import": "./dist/services/I18nService.js"
		}
	},
	"files": [
		"dist",
		"src/**/*.svelte",
		"README.md"
	],
	"scripts": {
		"build": "rm -rf dist tsconfig.tsbuildinfo && tsc -p tsconfig.json && node ./scripts/build-ce-components.mjs",
		"dev": "tsc -p tsconfig.json --watch",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "biome check .",
		"check": "tsc -p tsconfig.json --noEmit",
		"test": "bun test"
	},
	"dependencies": {
		"@pie-players/pie-calculator": "workspace:*",
		"@pie-players/pie-calculator-desmos": "workspace:*",
		"@pie-players/pie-context": "workspace:*",
		"@pie-players/pie-players-shared": "workspace:*",
		"@pie-players/pie-tts": "workspace:*",
		"@pie-players/tts-client-server": "workspace:*",
		"daisyui": "^5.5.18"
	},
	"peerDependencies": {
		"svelte": "^5.51.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"typescript": "^5.9.3"
	},
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/assessment-toolkit#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": true
}
