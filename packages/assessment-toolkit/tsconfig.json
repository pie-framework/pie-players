{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"disableSourceOfProjectReferenceRedirect": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.svelte"
	],
	"exclude": [
		"dist",
		"node_modules"
	],
	"references": [
		{
			"path": "../pie-context"
		},
		{
			"path": "../calculator"
		},
		{
			"path": "../calculator-desmos"
		},
		{
			"path": "../tts"
		},
		{
			"path": "../tts-client-server"
		},
		{
			"path": "../players-shared"
		}
	]
}
