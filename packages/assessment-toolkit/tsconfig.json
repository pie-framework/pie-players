{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"disableSourceOfProjectReferenceRedirect": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"],
	"exclude": ["dist", "node_modules"],
	"references": [
		{ "path": "../tts-core" },
		{ "path": "../players-shared" }
	]
}
