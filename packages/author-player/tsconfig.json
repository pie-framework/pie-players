{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"rootDir": "src",
		"types": [
			"svelte"
		],
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.svelte"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
