{
	"name": "@pie-players/pie-calculator-mathjs",
	"version": "0.1.3",
	"description": "Math.js calculator provider for PIE Assessment Toolkit - Open-source, always-available fallback",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./svelte": {
			"types": "./dist/svelte-provider.d.ts",
			"import": "./dist/svelte-provider.js",
			"svelte": "./src/components/Calculator.svelte"
		}
	},
	"files": [
		"dist",
		"src/components",
		"README.md",
		"ACCESSIBILITY.md"
	],
	"scripts": {
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"demo": "cd demo && bun install && bun run dev",
		"demo:build": "cd demo && bun install && bun run build"
	},
	"keywords": [
		"pie",
		"calculator",
		"mathjs",
		"math",
		"accessibility",
		"svelte",
		"daisyui",
		"wcag"
	],
	"author": "PIE Framework",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/calculator-mathjs"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@pie-players/pie-calculator": "workspace:*",
		"daisyui": "^5.5.18"
	},
	"peerDependencies": {
		"mathjs": ">=12.0.0",
		"svelte": "^5.51.0"
	},
	"peerDependenciesMeta": {
		"svelte": {
			"optional": true
		}
	},
	"devDependencies": {
		"playwright": "^1.58.0",
		"svelte": "^5.51.3",
		"typescript": "^5.9.3"
	},
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/calculator-mathjs#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": true
}
