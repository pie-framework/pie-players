{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"disableSourceOfProjectReferenceRedirect": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
