{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"types": [
			"svelte"
		],
		"composite": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.svelte"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
