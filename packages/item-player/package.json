{
	"name": "@pie-players/pie-item-player",
	"version": "0.1.0",
	"type": "module",
	"description": "Unified custom element for rendering PIE items with iife/esm/preloaded strategies",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/item-player"
	},
	"publishConfig": {
		"access": "public"
	},
	"unpkg": "./dist/pie-item-player.js",
	"jsdelivr": "./dist/pie-item-player.js",
	"main": "./dist/pie-item-player.js",
	"types": "./index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./dist/pie-item-player.js"
		}
	},
	"files": [
		"dist",
		"index.d.ts"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"typecheck": "tsc --noEmit",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "biome check ."
	},
	"peerDependencies": {
		"svelte": "^5.51.0"
	},
	"dependencies": {
		"@pie-players/pie-players-shared": "workspace:*",
		"@pie-players/pie-theme": "workspace:*",
		"daisyui": "^5.5.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@playwright/test": "^1.58.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.1.0",
		"svelte": "^5.51.3",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4"
	},
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/item-player#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": true
}
