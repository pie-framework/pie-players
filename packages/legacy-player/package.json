{
	"name": "@pie-players/pie-legacy-player",
	"version": "0.1.0",
	"type": "module",
	"description": "Web component wrapper for @pie-framework/pie-player-components (legacy player)",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"unpkg": "./dist/pie-legacy-player.js",
	"jsdelivr": "./dist/pie-legacy-player.js",
	"main": "./dist/pie-legacy-player.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/pie-legacy-player.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"typecheck": "tsc --noEmit",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"lint": "biome check ."
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@pie-players/pie-players-shared": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.1.0",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4"
	}
}
