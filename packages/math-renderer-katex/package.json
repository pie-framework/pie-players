{
	"name": "@pie-players/math-renderer-katex",
	"version": "0.1.4",
	"type": "module",
	"description": "KaTeX adapter for PIE math rendering",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/math-renderer-katex"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "tsc -p tsconfig.json --watch",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "biome check ."
	},
	"dependencies": {
		"@pie-players/math-renderer-core": "workspace:*",
		"katex": "^0.16.27"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"pie",
		"math",
		"katex",
		"rendering",
		"latex"
	],
	"sideEffects": false,
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/math-renderer-katex#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
