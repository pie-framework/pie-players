{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.json"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"src/components/**"
	]
}
