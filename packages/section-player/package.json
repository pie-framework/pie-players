{
	"name": "@pie-players/pie-section-player",
	"version": "0.2.11",
	"type": "module",
	"description": "Web component for rendering QTI 3.0 assessment sections with passages and items",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/section-player"
	},
	"publishConfig": {
		"access": "public"
	},
	"unpkg": "./dist/pie-section-player.js",
	"jsdelivr": "./dist/pie-section-player.js",
	"main": "./dist/pie-section-player.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/pie-section-player.js"
		},
		"./components/ItemShellElement.svelte": {
			"types": "./dist/pie-section-player.d.ts",
			"import": "./dist/pie-section-player.js"
		},
		"./components/PassageShellElement.svelte": {
			"types": "./dist/pie-section-player.d.ts",
			"import": "./dist/pie-section-player.js"
		},
		"./components/section-player-base-element": {
			"types": "./dist/pie-section-player.d.ts",
			"import": "./dist/pie-section-player.js"
		}
	},
	"files": [
		"dist",
		"src/**/*.svelte"
	],
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"typecheck": "tsc --noEmit",
		"check": "svelte-check --tsconfig ./tsconfig.svelte-check.json --compiler-warnings options_missing_custom_element:ignore",
		"lint": "biome check ."
	},
	"peerDependencies": {
		"svelte": "^5.51.0"
	},
	"dependencies": {
		"@pie-players/pie-assessment-toolkit": "workspace:*",
		"@pie-players/pie-esm-player": "workspace:*",
		"@pie-players/pie-fixed-player": "workspace:*",
		"@pie-players/pie-iife-player": "workspace:*",
		"@pie-players/pie-inline-player": "workspace:*",
		"@pie-players/pie-context": "workspace:*",
		"@pie-players/pie-players-shared": "workspace:*",
		"@pie-players/pie-section-tools-toolbar": "workspace:*",
		"@pie-players/pie-tool-answer-eliminator": "workspace:*",
		"@pie-players/pie-tool-calculator": "workspace:*",
		"@pie-players/pie-tool-calculator-inline": "workspace:*",
		"@pie-players/pie-tool-tts-inline": "workspace:*",
		"@pie-players/tts-client-server": "workspace:*",
		"daisyui": "^5.5.18"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@playwright/test": "^1.58.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@types/node": "^25.1.0",
		"svelte": "^5.51.3",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-dts": "^4.5.4"
	},
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/section-player#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": true
}
