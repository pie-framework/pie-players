{
	"name": "@pie-players/pie-theme-daisyui",
	"version": "0.1.1",
	"type": "module",
	"description": "DaisyUI token bridge for PIE theme variables",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git",
		"directory": "packages/theme-daisyui"
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"unpkg": "./dist/index.js",
	"jsdelivr": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./bridge.css": "./dist/bridge.css"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc -p tsconfig.json && cp src/*.css dist/",
		"dev": "tsc -p tsconfig.json --watch",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "biome check .",
		"check": "tsc -p tsconfig.json --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"typescript": "^5.9.3"
	},
	"homepage": "https://github.com/pie-framework/pie-players/tree/master/packages/theme-daisyui#readme",
	"bugs": {
		"url": "https://github.com/pie-framework/pie-players/issues"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"sideEffects": [
		"./dist/*.css"
	]
}
