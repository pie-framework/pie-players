{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"types": ["svelte"],
		"outDir": "./dist",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true
	},
	"include": ["**/*.ts", "**/*.svelte"],
	"exclude": ["node_modules", "dist"]
}
