{
	"name": "@pie-framework/pie-tool-toolbar",
	"version": "1.0.0",
	"type": "module",
	"description": "Tool panel toolbar for PIE assessment player - displays and manages tool buttons",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pie-framework/pie-players.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"unpkg": "./dist/tool-toolbar.js",
	"jsdelivr": "./dist/tool-toolbar.js",
	"keywords": [
		"pie",
		"assessment",
		"tool",
		"toolbar",
		"ui",
		"panel"
	],
	"svelte": "./tool-toolbar.svelte",
	"main": "./dist/tool-toolbar.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/tool-toolbar.js",
			"svelte": "./tool-toolbar.svelte"
		}
	},
	"files": [
		"dist",
		"tool-toolbar.svelte",
		"index.ts",
		"README.md"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"license": "MIT",
	"dependencies": {
		"@pie-framework/pie-assessment-toolkit": "workspace:*",
		"@pie-framework/pie-players-shared": "workspace:*",
		"@pie-framework/pie-tool-calculator": "workspace:*",
		"@pie-framework/pie-tool-protractor": "workspace:*",
		"@pie-framework/pie-tool-ruler": "workspace:*",
		"@pie-framework/pie-tool-line-reader": "workspace:*",
		"@pie-framework/pie-tool-graph": "workspace:*",
		"@pie-framework/pie-tool-periodic-table": "workspace:*",
		"@pie-framework/pie-tool-annotation-toolbar": "workspace:*",
		"@pie-framework/pie-tool-color-scheme": "workspace:*",
		"@pie-framework/pie-tool-answer-eliminator": "workspace:*",
		"@pie-framework/pie-tool-magnifier": "workspace:*",
		"@pie-framework/pie-tool-text-to-speech": "workspace:*"
	},
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "vite build",
		"dev": "vite build --watch",
		"typecheck": "tsc --noEmit",
		"lint": "biome check ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"svelte": "^5.16.1",
		"typescript": "^5.7.0",
		"vite": "^7.0.8",
		"vite-plugin-dts": "^4.5.3"
