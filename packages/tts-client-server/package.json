{
	"name": "@pie-players/tts-client-server",
	"version": "0.1.0",
	"description": "Client-side TTS provider that calls server API for synthesis",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest",
		"test:coverage": "vitest --coverage"
	},
	"keywords": [
		"tts",
		"text-to-speech",
		"client",
		"server-api",
		"speech-marks"
	],
	"author": "PIE Framework",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@pie-players/pie-tts": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.3.3",
		"vitest": "^1.0.4"
	}
}
