{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"types": ["@types/bun"]
	},
	"files": [],
	"references": [
		{ "path": "./apps/docs" },
		{ "path": "./tools/cli" },
		{ "path": "./packages/assessment-toolkit" },
		{ "path": "./packages/pie-context" },
		{ "path": "./packages/default-tool-loaders" },
		{ "path": "./packages/item-player" },
		{ "path": "./packages/players-shared" },
		{ "path": "./packages/tool-annotation-toolbar" },
		{ "path": "./packages/tool-answer-eliminator" },
		{ "path": "./packages/tool-calculator" },
		{ "path": "./packages/tool-color-scheme" },
		{ "path": "./packages/tool-graph" },
		{ "path": "./packages/tool-line-reader" },
		{ "path": "./packages/tool-periodic-table" },
		{ "path": "./packages/tool-protractor" },
		{ "path": "./packages/tool-ruler" },
		{ "path": "./packages/tool-text-to-speech" },
		{ "path": "./packages/tool-toolbar" },
		{ "path": "./packages/tts" },
		{ "path": "./packages/tts-server-core" },
		{ "path": "./packages/tts-server-polly" },
		{ "path": "./packages/tts-client-server" },
		{ "path": "./packages/calculator" },
		{ "path": "./packages/calculator-mathjs" },
		{ "path": "./packages/calculator-desmos" },
		{ "path": "./packages/math-renderer-core" },
		{ "path": "./packages/math-renderer-mathjax" },
		{ "path": "./packages/math-renderer-katex" }
	],
	"exclude": ["node_modules", "dist", "build"]
}
