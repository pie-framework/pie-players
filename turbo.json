{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**", ".svelte-kit/**"]
		},
		"test": {
			"dependsOn": ["build"],
			"cache": false
		},
		"lint": {
			"cache": false
		},
		"typecheck": {
			"cache": false
		},
		"check": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"clean": {
			"cache": false
		}
	}
}
